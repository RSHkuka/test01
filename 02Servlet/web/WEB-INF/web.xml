<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--servlet标签给Tomcat配置一个servlet程序-->
    <servlet>
        <!--给servlet起一个别名-->
        <servlet-name>HelloServlet</servlet-name>
        <!--是servlet的全类名-->
        <servlet-class>com.rsh.servlet.HelloServlet</servlet-class>
    </servlet>
    <!--给servlet配置访问地址-->
    <servlet-mapping>
        <!--告诉服务器给哪一个servlet用-->
        <servlet-name>HelloServlet</servlet-name>
        <!--访问服务器的地址-->
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloServlet2</servlet-name>
        <servlet-class>com.rsh.servlet.HelloServlet2</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>HelloServlet3</servlet-name>
        <servlet-class>com.rsh.servlet.HelloServlet3</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserFormServlet</servlet-name>
        <servlet-class>com.rsh.servlet.UserFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResponseIOServlet</servlet-name>
        <servlet-class>com.rsh.servlet.ResponseIOServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponseIOServlet</servlet-name>
        <url-pattern>/responseIOServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserFormServlet</servlet-name>
        <url-pattern>/userform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelloServlet2</servlet-name>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelloServlet3</servlet-name>
        <url-pattern>/hello3</url-pattern>
    </servlet-mapping>
</web-app>